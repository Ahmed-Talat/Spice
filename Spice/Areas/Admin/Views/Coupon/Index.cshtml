@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhiteBorder">
    <div class="row">
        <div class="col-6 text-info">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <div>
            <table class="table table-striped border">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Discount)</th>
                    <th>@Html.DisplayNameFor(m => m.MinimumAmount)</th>
                    <th>@Html.DisplayNameFor(m => m.IsActive)</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Discount
                        </td>
                        <td>
                            @item.MinimumAmount
                        </td>
                        <td>
                            @item.IsActive
                        </td>
                        <partial name="_TableButtonsPartial" model="item.Id" />
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <p>No Coupons exist...</p>
    }
</div>
