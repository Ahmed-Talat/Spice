@model Spice.Models.ViewModels.MenuItemViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Menu Item Details</h2>
<br />

<div class="border backgroundWhite row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MenuItem.Name" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="MenuItem.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MenuItem.Description" class="col-form-label"></label>
            </div>
            <div class="col-9">
                @Html.TextAreaFor(M => M.MenuItem.Description)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MenuItem.Price" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="MenuItem.Price" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="MenuItem.Category.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MenuItem.SubCategoryId" class="col-form-label"></label>
            </div>
            <div class="col-9">
                <input asp-for="MenuItem.SubCategory.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="MenuItem.Spiciness" class="col-form-label"></label>
            </div>
            <fieldset disabled>
                <div class="col-9">
                    <select asp-for="MenuItem.Spiciness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control" style="width:200px;"></select>
                </div>
            </fieldset>
        </div>
        <div class="form-group row">
            <partial name="_EditAndBackToListButtons" model="@Model.MenuItem.Id" />
        </div>
    </div>
    <div class="col-3 offset-1">
        <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        tinymce.init({
            selector: 'textarea',
            readonly: 1
        });
    </script>
}