@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhiteBorder">
    <div class="row">
        <div class="col-6 text-info">
            <h2>Menu Itmes</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <div>
            <table class="table table-striped border">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Category.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.SubCategory.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Price)</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Category.Name</td>
                        <td>@item.SubCategory.Name</td>
                        <td>@item.Price</td>
                        <partial name="_TableButtonsPartial" model="item.Id" />
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <p>No Menu Items exist...</p>
    }
</div>

