@model SubCategory
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete SubCategory</h2>
<br />

<div class="border backgroundWhite">
    <form asp-action="Delete" method="post">
        <div class="form-group row">
            <label asp-for="Category.Name" class="col-form-label col-2 offset-1"></label>
            <input asp-for="Category.Name" class="form-control col-6" />
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-form-label col-2 offset-1"></label>
            <input asp-for="Name" class="form-control col-6" />
        </div>
        <div class="form-group row">
            <partial name="_DeleteAndBackToListButtons" model="@Model.Id" />
        </div>
    </form>
</div>